@page
@model Paginas_Enchiladas.Pages.EnchiladaMaster.DetailsModel

@{
    ViewData["Title"] = "Detalles"; //Titulo de la pagina
}

<h3>Detalles Enchilada</h3>  <!-- Título principal de la página -->
<hr />
<div>
    <dl class="row"><!-- Lista de definición para mostrar los detalles de la enchilada -->
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enchilada.Tipo_tortilla)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enchilada.Tipo_tortilla)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enchilada.Relleno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enchilada.Relleno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enchilada.Salsa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enchilada.Salsa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enchilada.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enchilada.Precio)
        </dd>
    </dl>
</div>
<div class="mt-2">
    <!-- Botones para en caso de querer editar el registro consultado o para volver al inicio-->
    <a asp-page="./Edit" asp-route-id="@Model.Enchilada.id_Enchilada" class="btn btn-primary">Actualizar</a> |
    <a asp-page="./Index" class="btn btn-success">Volver al Menu</a>
</div>
